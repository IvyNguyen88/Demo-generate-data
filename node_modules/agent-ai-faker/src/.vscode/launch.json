{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Cucumber Tests",
        "program": "${workspaceFolder}/node_modules/@cucumber/cucumber/bin/cucumber-js",
        "args": [
          "--require",
          "test/steps/*.js",
          "test/features/*.feature"
        ],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  